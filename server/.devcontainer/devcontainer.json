{
  "name": "AITrade Backtrader Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.pylint",
        "ms-vscode.vscode-json",
        "ms-vscode.powershell"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "autopep8",
        "editor.formatOnSave": true,
        "editor.rulers": [80, 120],
        "python.linting.pylintArgs": ["--disable=C0111", "--disable=C0103"]
      }
    }
  },
  "postCreateCommand": "echo 'Dev container ready!'",
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/datas,target=/workspaces/server/datas,type=bind,consistency=cached"
  ]
}
